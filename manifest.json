{
  "manifest_version": 2,
  "name": "ClearSound",
  "version": "1.0",
  "description": "Extensão para controle de volume de mídia",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "browser_action": {
    "default_popup": "clearsound.html",
    "default_icon": {
      "16": "./imagens/planta16.jpg",
      "48": "./imagens/planta48.jpg",
      "128": "./imagens/planta128.jpg"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["clearsound.js"]
    }
  ],
  "icons": {
    "16": "./imagens/planta16.jpg",
    "48": "./imagens/planta48.jpg",
    "128": "./imagens/planta128.jpg"
  }
}
